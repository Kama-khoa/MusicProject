<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="16dp">

    <!-- Title EditText -->
    <EditText
        android:id="@+id/et_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Tiêu đề bài hát"
        android:inputType="text"
        android:layout_marginBottom="12dp"
        android:background="@drawable/rounded_edittext_background"
    android:padding="12dp" />

    <!-- Artist Spinner -->
    <Spinner
        android:id="@+id/sp_artist"
        android:layout_width="match_parent"
        android:layout_height="41dp"
        android:layout_marginBottom="12dp"
        android:background="@drawable/rounded_spinner_background" /> <!-- Thay đổi nền -->

    <!-- Album Spinner -->
    <Spinner
        android:id="@+id/sp_album"
        android:layout_width="match_parent"
        android:layout_height="38dp"
        android:layout_marginBottom="12dp"
        android:background="@drawable/rounded_spinner_background" /> <!-- Thay đổi nền -->

    <!-- Genre Spinner -->
    <Spinner
        android:id="@+id/sp_genre"
        android:layout_width="match_parent"
        android:layout_height="38dp"
        android:layout_marginBottom="12dp"
        android:background="@drawable/rounded_spinner_background" />

    <!-- Duration TextView -->
    <TextView
        android:id="@+id/tv_duration"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp"
        android:text="Thời lượng"
        android:textColor="#333333"
        android:textSize="16sp" />

    <!-- Upload Audio Button -->
    <Button
        android:id="@+id/btn_upload"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Tải lên file âm thanh"
        android:layout_marginBottom="16dp"
        android:backgroundTint="#1DB954"
    android:textColor="#040404" />

    <!-- Action Buttons Layout -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <!-- Save Button -->
        <Button
            android:id="@+id/btn_save"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Lưu"
            android:layout_marginEnd="8dp"
            android:backgroundTint="#1D56B9"
        android:textColor="#FFFFFF" />

        <!-- Cancel Button -->
        <Button
            android:id="@+id/btn_cancel"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Hủy"
            android:layout_marginStart="8dp"
            android:backgroundTint="#FF4444"
        android:textColor="#FFFFFF" />
    </LinearLayout>

    <!-- Delete Button -->
    <Button
        android:id="@+id/btn_delete"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Xóa"
        android:layout_marginTop="16dp"
        android:visibility="gone"
        android:backgroundTint="#FF4444"
    android:textColor="#FFFFFF" />

</LinearLayout>
